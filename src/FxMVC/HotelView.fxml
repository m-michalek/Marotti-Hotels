<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FxMVC.HotelController">
   <children>
      <Button fx:id="searchBtn" alignment="CENTER" layoutX="25.0" layoutY="260.0" mnemonicParsing="false" onAction="#searchForHotel" text="Search for a hotel" />
