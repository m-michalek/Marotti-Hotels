      <Label layoutX="43.0" layoutY="29.0" text="Here you can find information about our hotels" />
      <Label layoutX="22.0" layoutY="115.0" text="Type here hotel name" />
      <TextField fx:id="hotelTextField" layoutX="172.0" layoutY="110.0" promptText="Marotti Berlin" />
      <Label fx:id="hotelNameLabel" layoutX="25.0" layoutY="161.0" text="Hotel name" />
      <Label fx:id="hotelDescriptionLabel" layoutX="25.0" layoutY="192.0" text="Hotel description " />
      <Button layoutX="186.0" layoutY="260.0" mnemonicParsing="false" onAction="#displayAllHotels" text="Display all" />
      <ListView fx:id="hotelListView" layoutX="372.0" layoutY="94.0" prefHeight="200.0" prefWidth="200.0" />
   </children>
</AnchorPane>
